--- a/arch/x86/kernel/apic/io_apic.c
+++ b/arch/x86/kernel/apic/io_apic.c
@@ -2335,14 +2335,14 @@ static int mp_irqdomain_create(int ioapic)
 	if (cfg->dev) {
 		fn =3D of_node_to_fwnode(cfg->dev);
 	} else {
-		fn =3D irq_domain_alloc_named_id_fwnode("IO-APIC", ioapic);
+		fn =3D irq_domain_alloc_named_id_fwnode("IO-APIC", mpc_ioapic_id(ioapic)=
);
 		if (!fn)
 			return -ENOMEM;
 	}
=20
 	fwspec.fwnode =3D fn;
 	fwspec.param_count =3D 1;
-	fwspec.param[0] =3D ioapic;
+	fwspec.param[0] =3D mpc_ioapic_id(ioapic);
=20
 	parent =3D irq_find_matching_fwspec(&fwspec, DOMAIN_BUS_ANY);
 	if (!parent) {
